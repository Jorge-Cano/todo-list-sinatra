  <form action="/search" method="get" class="search-task">
    <input type="text" name="search_task" class="search-task__name" placeholder="¿No encuentras tu tarea? Escribe su nombre aquí">
    <input type="submit" class="search-task__submit" value="Buscar">
  </form>

  <ul class="tasks-container tasks-unfinished">
    <% @tasks.each do |element|  %>
      <li <%= element["done"] == true ? 'class="completed"' : '' %>>
        <span class="icon-action marks-done">
          <form action="/update/<%= element["id"] %>" method="post">
            <input type="hidden" name="_method" value="patch">
            <button type="submit">✓</button>
          </form>
        </span>
        <strong><%= element["title"] %></strong>
        <span class="icon-action delete-task">
          <form action="/delete/<%= element["id"] %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit">✗</button>
          </form>
        </span>
      </li>
    <% end %>
  </ul>

  <ul class="tasks-container tasks-done"></ul>
